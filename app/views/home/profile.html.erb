<%= link_to "Courses", :courses %>
<%= link_to "New course", new_course_path %>
<%= link_to "Profile", :profile %>

<h1>Profile</h1>

<%= button_to "Quit", destroy_user_session_path, id: current_user.id, method: :delete %>
<%= link_to "Edit profile", edit_user_registration_path, class: 'show_profile' %>

<div id="courses">
  <h2>My courses</h2>
  <% @courses.each do |course| %>
    <%= render course %>
    <p>
      <%= link_to "Show this course", course %>
      <%= link_to "Remove this course", controller: "courses", action: "remove", id: course.id %>
    </p>
  <% end %>
</div>