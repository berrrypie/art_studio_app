<h2> Редактировать профиль </h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
  <%= f.label :Имя %><br />
  <%= f.text_field :first_name,  value: @user.first_name%>
  </div>
  <div class="field">
  <%= f.label :Фамилия %><br />
  <%= f.text_field :last_name, value: current_user.last_name, autocomplete: "last_name" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :Пароль %> <i>(Оставьте поле пустым, если не хотите редактировать)</i><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> символов минимум</em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :Подтверждение %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :Текущий_пароль %> <i>(Необходим, чтобы подтвердить изменения)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Обновить" %>
  </div>
<% end %>

<h3>Удалить аккаунт</h3>

<div>Надоело? <%= button_to "Удалить аккаунт", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete %></div>

