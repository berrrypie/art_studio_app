<h2>Регистрация</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :Имя %><br />
    <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name"%>
  </div>
  
  <div class="field">
    <%= f.label :Фамилия %><br />
    <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name"%>
  </div>

  <div class="field">
    <%= f.label :Пароль %>
    <% if @minimum_password_length %>
    <em>( минимум <%= @minimum_password_length %> символов)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "Новый пароль" %>
  </div>

  <div class="field">
    <%= f.label :Подтверждение %><br />
    <%= f.password_field :password_confirmation, autocomplete: "Подтвердите пароль" %>
  </div>

  <div class="actions">
    <%= f.submit "Зарегистирироваться!" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
